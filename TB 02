#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char *ChargerChaine(int N) {
    char *chaine = (char*)malloc(N+1); // +1 للبايت الصفري
    printf("ادخل السلسلة: ");
    fgets(chaine, N, stdin);
    chaine[strcspn(chaine, "\n")] = 0; // حذف حرف النهاية إذا كان \n
    return chaine;
}

int Longueur(char *ch) {
    return strlen(ch);
}

void ChargerTab(char *p, char Tab[]) {
    strcpy(Tab, p);
}

void InverserTab(char Tab[], char T[], int m) {
    for (int i = 0; i < m; i++) {
        T[i] = Tab[m - i - 1];
    }
}

void AfficherTab(char Tab[], int m) {
    for (int i = 0; i < m; i++) {
        printf("%c", Tab[i]);
    }
    printf("\n");
}

int main() {
    int n;
    printf("ادخل الحجم المطلوب للسلسلة: ");
    scanf("%d", &n);

    char *chaine = ChargerChaine(n);
    int longueur = Longueur(chaine);

    char Tab[longueur], T[longueur];
    ChargerTab(chaine, Tab);

    printf("السلسلة الأصلية: %s\n", Tab);

    InverserTab(Tab, T, longueur);
    printf("السلسلة المعكوسة: ");
    AfficherTab(T, longueur);

    free(chaine);
    return 0;
}
