#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char *ChargerChaine(int N) {
    char *chaine = (char*)malloc(N+1); // +1 pour le caractère de fin de chaîne
    printf("Entrez la chaîne : ");
    fgets(chaine, N, stdin);
    chaine[strcspn(chaine, "\n")] = 0; // Supprimer le '\n' éventuel à la fin
    return chaine;
}

int Longueur(char *ch) {
    return strlen(ch);
}

void ChargerTab(char *p, char Tab[]) {
    strcpy(Tab, p);
}

void InverserTab(char Tab[], char T[], int m) {
    for (int i = 0; i < m; i++) {
        T[i] = Tab[m - i - 1];
    }
}

void AfficherTab(char Tab[], int m) {
    for (int i = 0; i < m; i++) {
        printf("%c", Tab[i]);
    }
    printf("\n");
}

int main() {
    int n;
    printf("Veuillez saisir la taille maximale de la chaîne : ");
    scanf("%d", &n);

    char *chaine = ChargerChaine(n);
    int m = Longueur(chaine);

    char Tab[m], T[m];
    ChargerTab(chaine, Tab);

    printf("La chaîne originale : %s\n", Tab);

    InverserTab(Tab, T, m);
    printf("La chaîne inversée : ");
    AfficherTab(T, m);

    free(chaine);
    return 0;
}
