#include <stdio.h>
#include <stdlib.h>

// Structure représentant un élément de la liste
typedef struct element {
    int valeur;
    struct element *suivant;
} element;

// Fonction pour créer une liste vide
element *creerListe() {
    return NULL; // Une liste vide est représentée par NULL
}

// Fonction pour ajouter un élément au début de la liste
element *ajouterEnDebut(element *liste, int valeur) {
    element *nouveau = (element*)malloc(sizeof(element));
    nouveau->valeur = valeur;
    nouveau->suivant = liste; // Le nouvel élément pointe vers l'ancien début
    return nouveau; // Le nouveau début est le nouvel élément
}

// Fonction pour charger la liste à partir d'un tableau
element *chargerListe(int tab[], int taille, element *liste) {
    for (int i = taille - 1; i >= 0; i--) {
        liste = ajouterEnDebut(liste, tab[i]); // On ajoute les éléments en sens inverse pour conserver l'ordre
    }
    return liste;
}

// Fonction pour afficher les éléments de la liste
void afficherListe(element *liste) {
    while (liste != NULL) {
        printf("%d -> ", liste->valeur);
        liste = liste->suivant;
    }
    printf("NULL\n");
}

// Fonction pour supprimer le dernier élément de la liste
element *supprimerEnFin(element *liste) {
    // Cas où la liste est vide ou contient un seul élément
    if (liste == NULL || liste->suivant == NULL) {
        return NULL;
    }
    element *precedent = liste;
    while (precedent->suivant->suivant != NULL) {
        precedent = precedent->suivant;
    }
    free(precedent->suivant); // Libération de la mémoire
    precedent->suivant = NULL;
    return liste;
}

// Fonction pour vider la liste
void viderListe(element *liste) {
    while (liste != NULL) {
        element *temp = liste;
        liste = liste->suivant;
        free(temp); // Libération de la mémoire de chaque élément
    }
}

int main() {
    int tab[] = {1, 3, 5, 7, 8, 10, 9, 11, 13, 20};
    element *liste = creerListe();
    liste = chargerListe(tab, 10, liste);
    afficherListe(liste);

    element *L1 = supprimerEnFin(liste);
    afficherListe(L1);

    element *L2 = ajouterEnDebut(L1, 40);
    afficherListe(L2);

    viderListe(L2);

    return 0;
}
